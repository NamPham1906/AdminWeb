<div class="main-panel">
  <div class="content-wrapper">
    <div class="page-header">
      <h3 class="page-title">Order</h3>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Order Detail</a></li>
          <li class="breadcrumb-item active" aria-current="page">Edit </li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-12 grid-margin">
        <div class="card">
          <div class="card-body">
            <form class="form-sample" id="update-form" action="/product/setting/detail/update" method="POST" enctype="multipart/form-data">
              <p class="card-description">Order information</p>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Order ID</label>
                    <div class="col-sm-9">
                      <input type="text" name="order_id" readonly="readonly" placeholder="Product ID" class="form-control" value="{{order.ORDER_ID}}">
                    </div>
                  </div>
                  <div class="form-group row">
                      <label class="col-sm-3 col-form-label">Order date</label>
                      <div class="col-sm-9">
                        <input class="form-control" name="importdate" type="datetime-local" readonly="readonly"  value="{{formattime order.ORDER_DATE}}">
                      </div>
                    </div>
                  
                   <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Manager</label>
                    <div class="col-sm-9">
                      <select id="staff" name="importer" class="form-control" disabled="true">
                        {{#each accounts}}
                        <option value={{ADMIN_ID}}>
                          <label>{{LASTNAME}}</label>
                        </option>
                        {{/each}}
                      </select>
                       <script type="text/javascript">
                        var els = document.querySelector('#staff option[value={{order.MANAGER}}]');
                        if (els) {
                          els.selected = true;
                        }
                      </script>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label"> Customer Name </label>
                    <div class="col-sm-9">
                      <!--<input type="text" name="description" placeholder="Description" class="form-control" value=""> -->
                       <input type="text" name="customer_name" readonly="readonly" placeholder="Customer Name" class="form-control" value="{{order.CLIENT.LASTNAME}}">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Address</label>
                    <div class="col-sm-9">
                       <input type="text" name="address" readonly="readonly" placeholder="Address" class="form-control" value="{{order.ADDRESS}}">
                    </div>
                  </div>
                 
                   
                  
                  
                
                
                
                </div>
                <div class="col-md-6">
                  
                </div>
              </div>
               <button type="submit" class="btn btn-primary mr-2" name="product_id" form="delete-form" value="{{product.PRODUCT_ID}}"> Delete </button>
              <button type="submit" class="btn btn-primary mr-2" form="update-form" name="product_id" value="{{product.PRODUCT_ID}}"> Update </button>
              <button class="btn btn-light" form="update-form">Cancel</button>
            </form>
            <form action="/product/setting/detail/delete" id="delete-form" method="POST">
            </form>
          </div>
        </div>
      </div>
    </div>
    
  </div>